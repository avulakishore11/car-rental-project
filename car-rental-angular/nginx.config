# /etc/nginx/conf.d/default.conf
server {
  listen 80;
  server_name  _;

  # point to the compiled Angular dist folder
  root /usr/share/nginx/html;
  index index.html;

  # SPA fallback â€“ redirect all routes to index.html
  location / {
    try_files $uri $uri/ /index.html;
  }

  # prevent caching of the app shell so users get the latest build
  location = /index.html {
    add_header Cache-Control "no-cache";
  }

  # cache static assets with a long TTL for better performance
  location ~* \.(?:js|css|png|jpg|jpeg|gif|svg|ico|webp|woff2?|ttf|eot)$ {
    try_files $uri =404;
    expires 1y;
    add_header Cache-Control "public, max-age=31536000, immutable";
  }

  # optional: add basic security headers if needed
  add_header X-Content-Type-Options "nosniff" always;
  add_header X-Frame-Options "DENY" always;
  add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}

